

#compute powers of 2 for 0-20
def question_3():
    answ = 0
    for power in range(0, 21):
        answ = 2**power
        print("2^", power, " =", answ)


#compute sum of all odd digits in input
def question_5():
    number = input("Enter a number: ")
    added = 0

    for digit in number:
        if int(digit) % 2 != 0:
            added += int(digit)
    print("The sum of the odd digits is: ", added)


#sum of digits in string
def question_7():
    total = 0
    phrase = input("Enter a sentence: ")

    for i in phrase:
        if i.isdigit():
            number = int(i)
            total += number
    print("The sum of the digits in the sentence is: ", total)


if __name__ == "__main__":
  question_3()
  question_5()
  question_7()
  
  
