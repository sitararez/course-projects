

#reads float number, prints 0 if 0, pos/neg if pos/neg
def question_2():
  number = float(input("Write a number: "))

  if number == 0:
    print("zero")
  if number > 0:
    print("positive")
    if abs(number) > 1000:
      print("large")
    elif 1 > abs(number) > 0:
      print("small")
  if number < 0:
    print("negative")
    if abs(number) > 1000:
      print("large")
    elif 1 > abs(number) > 0:
      print("small")

#checks how many digits
def question_3():
  number = int(input("Write a number: "))

  if number < 0:
    number = number * -1
  if 0 <= number < 10:
    print("This number has one digit")
  elif 10 <= number < 100:
    print("This number has two digits")
  elif 100 <= number < 1000:
    print("this number has three digits")
  elif 1000 <= number < 10000:
    print("this number has four digits")
  elif 10000 <= number < 100000:
    print("this number has five digits")
  elif 100000 <= number < 1000000:
    print("This number has six digits")
  else:
    print("lots")
